<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uae_barq.uaebarqtasks">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app_config.AppConfig"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="asset_statements"
            android:resource="@string/asset_statements" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="35a5a4cb531a9905102805c5e0ed674b4821eab7" />

        <activity android:name=".main.DynamicLinkActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--Existing app links config-->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="barquae.000webhostapp.com"
                    android:scheme="https" />
                <data
                    android:host="barquae.000webhostapp.com"
                    android:scheme="http" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="barquae.000webhostapp.com"
                    android:scheme="app" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="example.com"
                    android:pathPrefix="/applinks"
                    android:scheme="https" />
                <data
                    android:host="example.com"
                    android:pathPrefix="/applinks"
                    android:scheme="http" />
            </intent-filter>
            <!--Firebase Dynamic Links Config-->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="uaebarqtasks.page.link"
                    android:pathPrefix="/barq_tasks"
                    android:scheme="https" />
                <data
                    android:host="uaebarqtasks.page.link"
                    android:pathPrefix="/barq_tasks"
                    android:scheme="http" />
            </intent-filter>

        </activity>

    </application>

</manifest>